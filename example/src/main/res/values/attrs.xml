<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="day">
        <attr name="state_current" format="boolean" />
    </declare-styleable>


    <!-- Textview 右上角红点 -->
    <declare-styleable name="RedTipTextView">
        <attr name="redTipsVisibility">
            <enum name="invisible" value="0"></enum>
            <enum name="visible" value="1"></enum>
            <enum name="gone" value="2"></enum>
        </attr>
        <attr name="showRightBoundDivider">
            <enum name="show" value="1"></enum>
            <enum name="unshow" value="0"></enum>
        </attr>
    </declare-styleable>

    <attr name="textwidth" format="integer"/>
    <attr name="typeface">
        <enum name="normal" value="0"/>
        <enum name="sans" value="1"/>
        <enum name="serif" value="2"/>
        <enum name="monospace" value="3"/>
    </attr>

