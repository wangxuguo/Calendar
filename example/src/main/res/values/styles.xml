<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="ActionBarTitle">
        <item name="android:textSize">@dimen/title_bar_text_size</item>
        <item name="android:textColor">@color/title_bar_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionBarButton">
        <item name="android:background">@drawable/title_bar_button_background_selector</item>
        <item name="android:layout_width">@dimen/title_bar_width</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>
</resources>
