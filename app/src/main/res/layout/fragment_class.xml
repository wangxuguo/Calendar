<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_bg_gray">

    <com.oceansky.teacher.customviews.RefreshListView
        android:id="@+id/class_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_lv"
        android:layout_marginRight="@dimen/margin_right_lv"
        android:cacheColorHint="@android:color/transparent"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="@dimen/dividerheight_listview"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="@dimen/padding_bottom_listview"
        android:scrollbars="none"
        android:visibility="gone"/>

    <include
        android:id="@+id/error_layout"
        layout="@layout/layout_common_error_page"
        android:visibility="gone"/>

    <include
        android:id="@+id/loading_layout"
        layout="@layout/layout_loading"
        android:visibility="gone"/>
</RelativeLayout>








