<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33000000">

    <LinearLayout
        android:id="@+id/container_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/single_container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#f2f2f2"
            >

            <TextView
                android:id="@+id/single_tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:text="@string/btn_cancel"
                android:textColor="@color/base_color_blue"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/single_tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:text="@string/btn_finish"
                android:textColor="@color/base_color_blue"
                android:textSize="15sp"/>
        </RelativeLayout>

        <com.oceansky.teacher.customviews.pickerview.LoopView
            android:id="@+id/picker_single"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:padding="3dp"
            />


    </LinearLayout>

</RelativeLayout>