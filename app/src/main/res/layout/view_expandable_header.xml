<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/width_knowlege_point_list_icon"
        android:layout_height="44dp"
        android:scaleType="center"
        android:src="@mipmap/icon_knowledge_point"/>

    <ImageView
        android:id="@+id/iv_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:src="@drawable/selector_knowledge_point_listview_arrow"/>

    <TextView
        android:id="@+id/tv_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/iv_item_arrow"
        android:layout_toRightOf="@id/iv_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_small"/>

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_icon"
        android:layout_marginLeft="@dimen/width_knowlege_point_list_icon"
        android:layout_marginRight="13dp"
        android:background="@color/divide_line_color"/>
</RelativeLayout>