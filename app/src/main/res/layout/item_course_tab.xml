<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/course_tab_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tab"
            android:textColor="@color/selector_course_tab"
            android:textSize="@dimen/text_size_mid"
            />

        <View
            android:id="@+id/course_tab_div_line"
            android:layout_width="@dimen/width_divide_line"
            android:layout_height="match_parent"
            android:background="#dbdbdb"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_course_tab_bg"/>
</LinearLayout>