<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:descendantFocusability="afterDescendants"
                android:padding="16dp">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/message_title"
        android:layout_alignParentRight="true"
        android:textColor="#999999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/message_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_title"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textColor="#999999"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/message_content_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp"
        android:src="@mipmap/icon_message_content_arrow_down"/>

    <View
        android:id="@+id/message_haveread_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_time"
        android:layout_marginTop="15dp"
        android:background="@drawable/message_haveread_dot_bg"
        android:visibility="gone"
        />
</RelativeLayout>