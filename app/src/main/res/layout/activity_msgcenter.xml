<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <com.shizhefei.view.indicator.FixedIndicatorView
        android:id="@+id/msgcenter_tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/main_tab_bg" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/msg_divider_color"
        />

    <com.shizhefei.view.viewpager.SViewPager
        android:id="@+id/msgceter_tab_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#d0d0d0" />

    <include
        android:id="@+id/error_layout"
        layout="@layout/layout_common_error_page"
        android:visibility="gone"/>

</LinearLayout>
