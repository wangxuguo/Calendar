<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_order_tab">

    <TextView
        android:id="@+id/msg_tab_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:text="tab"
        android:textColor="@color/tab_main_selector"
        android:textSize="@dimen/text_size_mid"/>

    <ImageView
        android:id="@+id/iv_msg_indicator"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/msg_tab_tv_title"
        android:src="@drawable/round_indicator"
        android:visibility="invisible"/>

    <View
        android:id="@+id/msg_tab_div_line"
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#e8e8e8"/>

    <View
        android:layout_width="60dp"
        android:layout_height="1.5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_course_tab_bg"/>
</RelativeLayout>