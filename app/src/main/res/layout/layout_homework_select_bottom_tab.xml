<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:background="@mipmap/bg_tab_with_shadow">

    <TextView
        android:id="@+id/select_tv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_size_mid"/>

    <Button
        android:id="@+id/select_btn1"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/selector_button_round_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/base_color_white"
        android:textSize="@dimen/text_size_small"/>

    <Button
        android:id="@+id/select_btn2"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="29dp"
        android:layout_toLeftOf="@id/select_btn1"
        android:background="@drawable/selector_button_round_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/base_color_white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"/>
</RelativeLayout>